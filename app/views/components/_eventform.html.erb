<div class="rapp-form">
<%= simple_form_for @event do |f| %>
  <h2>new event</h2>
  <% if @event.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name %>
  <%= f.input :date_begin, as: :date, html5: true %>
  <%= f.input :date_end, as: :date, html5: true %>
  <%= f.input :capacity %>
  <%= f.input :equipment %>
  <%= f.input :price %>
  <%= f.input :commodities %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :picture %>
  <%= f.submit %>
<% end %>
</div>
