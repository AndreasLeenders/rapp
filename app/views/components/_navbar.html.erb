<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-rapp-brand">
    <h1><%= link_to "Rapp", root_path %></h1>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "– Home", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "– Browse events", events_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% if current_user.nil? %>
    <%= link_to "– Sign-in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% else %>
    <%= link_to "– Sign-out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>


    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="the" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Team members</a></li>
          <li><a href="#">Log Out</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Search</a></li>
        <li><a href="#">Become an Organizer</a></li>
        <li><a href="#">Log out</a></li>
      </ul>
    </div>
  </div>
</div>
