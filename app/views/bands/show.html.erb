<div id="wrap-content">
  <h1> <%= @band.name %> </h1>
  <ul>
  <li><strong><%= @band.content %></strong></li>
   <li><%= image_tag @band.pictures %></li>
   <li><strong><%= @band.soundcloud %></strong></li>
   <li><strong><%= @band.location %></strong></li>
    <% if current_user.is_band && current_user.band.id == @band.id %>
    <ul>
     <li><%= link_to "Edit", edit_band_path(@band) %></li>
      <li><%= link_to "Delete", band_path, method: :delete, data: { confirm: "Do you want to delete this band ?"} %></li>
      <% end %>

   <li><%= link_to "Back to band page", bands_path%></li>
 </ul>
</div>
