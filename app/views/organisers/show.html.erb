<div id="wrap-content">
<p><%= link_to "Back on the main page", root_path %></p>
<p><%= link_to "Edit profile", edit_organiser_path(@organiser) %></p>
  <h1>Profile</h1>

 <ul>
   <li><h2><%= @organiser.name %></h2></li>
 </ul>
 <div id="card-container">
   <% @organiser.events.each do |event| %>
     <section class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= event.picture %>'); background-size: cover;">
       <h3><%= event.city.capitalize %></h3>
       <h2><%= link_to event.name, event_path(event) %></h2>
       <h4>
         <%= event.date_begin.strftime("From %b %e, %l:%M %p") %>
         <br>
         <%= event.date_end.strftime("To %b %e, %l:%M %p") %>
       </h4>
       <h5>Organised by <%= event.organiser.name %></h5>
     </section>
   <% end %>
 </div>








